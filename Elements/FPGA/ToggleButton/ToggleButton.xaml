<UserControl x:Class="FPGA_UI.Elements.FPGA.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FPGA_UI.Elements.FPGA"
             mc:Ignorable="d"
             Width="30"
             Height="80"
             VerticalAlignment="Top"
             BorderBrush="Transparent"
             BorderThickness="0"
             Margin="1,0,1,0">
    <Grid Background="Gray">
        <Border BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock VerticalAlignment="Bottom" TextAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType=local:ToggleButton}, Path=ButtonNumber}"/>
                <Rectangle Stroke="Black" Width="20" Height="55" Margin="0,10,0,0" VerticalAlignment="Top"/>
                <Rectangle Name="Rectangle_BlackToggle" Grid.Row="0" Stroke="Black" Width="20" Height="25" Margin="0,10,0,0" VerticalAlignment="Top" Fill="Black"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
